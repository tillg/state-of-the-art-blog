//- It is assumed that the article is in the variable article

.post-preview
  a(href="post.html")
    h2.post-title #{article.title}
    h3.post-subtitle We predict too much for the next year and yet far too little for the next ten.
  p.post-meta Posted 
    a(href="#")= article.author ? 'by ' + article.author + ' ' : '' 
    = article.date ? 'on ' + moment(article.date).format(DATE_FORMAT) : ''
hr
