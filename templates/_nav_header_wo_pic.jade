// Navigation
nav.navbar.navbar-expand-lg.navbar-light.fixed-top#mainNav(style="background-color:gray")
  .container
    a.navbar-brand(href='#{site.url}' style="color:white") #{site.title}
    button.navbar-toggler.navbar-toggler-right(type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation" style="color:white") Menu
    .collapse.navbar-collapse#navbarResponsive
      ul.navbar-nav.ml-auto
        li.nav-item
          a.nav-link(href="#{site.url}/about" style="color:white") About
        li.nav-item
          a.nav-link(href="#{site.url}/contact" style="color:white") Contact 

// Page Header
header.masthead
  .overlay
  .container
    .row
      .col-lg-8.col-md-10.mx-auto
        .site-heading(style="padding-top:20;padding-bottom:0")