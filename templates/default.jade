- var DATE_FORMAT = "DD.MM.YYYY"

html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    title #{site.title} 

    // Bootstrap Core
    link(rel="stylesheet", href="#{site.url}/assets/vendor/bootstrap/css/bootstrap.min.css" )

    // Custom fonst for this template
    link(href='#{site.url}/assets/vendor/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    //- link(href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic', rel='stylesheet', type='text/css')
    //- link(href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel='stylesheet', type='text/css')
    link(href='#{site.url}/assets/css/google-fonts.css', rel='stylesheet', type="text/css")

    // Custom styles for this template
    link(href='#{site.url}/assets/css/clean-blog.min.css', rel='stylesheet')

    // Google tracking code
    script(async src="https://www.googletagmanager.com/gtag/js?id=#{site.googleTrackingCode}").
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', '#{site.googleTrackingCode}');
      
  body

    // Navigation & page header
    include _nav_header_pic.jade

    // Main Content from default.jade
    block content

    // Footer
    include footer.jade

    // Bootstrap core JavaScript 
    <script src="#{site.url}/assets/vendor/jquery/jquery.min.js"></script>
    <script src="#{site.url}/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    // Custom scripts for this template
    <script src="#{site.url}/assets/js/clean-blog.min.js"></script>

