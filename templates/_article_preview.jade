//- It is assumed that the article is in the variable article 

.post-preview
  a(href="#{article.path}")
    h2.post-title #{article.title}
    h3.post-subtitle  #{article.excerpt}
  p.post-meta Posted 
    = article.author ? 'by ' + article.author + ' ' : '' 
    = article.date ? 'on ' + moment(article.date).format(DATE_FORMAT) : ''
hr
